<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="BottomNavActiveText" parent="TextAppearance.MaterialComponents.Caption">
        <item name="android:textSize">12sp</item>
        <item name="colorPrimary">@color/primary</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="BottomNavInactiveText" parent="TextAppearance.MaterialComponents.Caption">
        <item name="android:textSize">12sp</item>
    </style>
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primary_dark</item>
        <item name="colorAccent">@color/primary</item>
        <item name="android:statusBarColor">@color/white</item>
        <item name="android:windowLightStatusBar">true</item>
    </style>
        <!-- Modern Priority Chip Style -->
        <style name="ModernPriorityChip" parent="Widget.MaterialComponents.Chip.Choice">
            <item name="chipCornerRadius">20dp</item>
            <item name="chipMinHeight">44dp</item>
            <item name="chipStartPadding">16dp</item>
            <item name="chipEndPadding">16dp</item>
            <item name="android:textSize">14sp</item>
            <item name="android:textStyle">bold</item>
            <item name="android:fontFamily">sans-serif-medium</item>
            <item name="chipStrokeWidth">2dp</item>
            <item name="android:elevation">2dp</item>
            <item name="chipIconSize">20dp</item>
        </style>
    <style name="ModernFilterChip" parent="Widget.MaterialComponents.Chip.Choice">
        <item name="chipCornerRadius">20dp</item>
        <item name="chipMinHeight">36dp</item>
        <item name="chipStartPadding">12dp</item>
        <item name="chipEndPadding">12dp</item>
        <item name="android:textSize">13sp</item>
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="chipBackgroundColor">@color/modern_chip_bg_selector</item>
        <item name="android:textColor">@color/modern_chip_text_selector</item>
        <item name="chipStrokeWidth">0dp</item>
        <item name="android:elevation">2dp</item>
    </style>

    <style name="ModernTabTextStyle" parent="TextAppearance.Design.Tab">
        <item name="android:textSize">14sp</item>
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:textStyle">bold</item>
        <item name="textAllCaps">false</item>
    </style>
    <!-- Circle Image View -->
    <style name="CircleImageView">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
    </style>

    <!-- Tab Text Style -->
    <style name="TabTextStyle" parent="TextAppearance.Design.Tab">
        <item name="android:textSize">14sp</item>
        <item name="android:textStyle">bold</item>
        <item name="textAllCaps">false</item>
    </style>

    <!-- Chip Styles -->
    <style name="ChipChoice" parent="Widget.MaterialComponents.Chip.Choice">
        <item name="chipCornerRadius">16dp</item>
        <item name="chipMinHeight">32dp</item>
        <item name="android:textSize">12sp</item>
    </style>
</resources>