<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="16dp"
    android:layout_marginVertical="8dp"
    android:background="@drawable/bg_client_item"
    android:padding="16dp">

    <!-- Red vertical bar for Overdue -->
    <View
        android:id="@+id/redBar"
        android:layout_width="4dp"
        android:layout_height="0dp"
        android:background="#DC2626"
        android:visibility="gone"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>

    <!-- Avatar (Image or Text Initials) -->
    <FrameLayout
        android:id="@+id/avatarContainer"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginStart="12dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toEndOf="@id/redBar">

        <ImageView
            android:id="@+id/avatarImageView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            android:background="@drawable/bg_avatar"
            android:visibility="gone"/>

        <TextView
            android:id="@+id/avatarTextView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:textSize="22sp"
            android:textStyle="bold"
            android:textColor="#4F46E5"
            android:background="@drawable/bg_avatar"
            android:text="AJ"/>
    </FrameLayout>

    <!-- Right side container (main content) -->
    <LinearLayout
        android:id="@+id/contentContainer"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@id/avatarContainer"
        app:layout_constraintEnd_toStartOf="@id/statusContainer"
        android:layout_marginStart="12dp">

        <!-- Name -->
        <TextView
            android:id="@+id/nameTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Muhammad Ahmed Khan"
            android:textSize="17sp"
            android:textStyle="bold"
            android:textColor="#111827"
            android:ellipsize="end"
            android:maxLines="1"/>

        <!-- Policy + Due Date -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="4dp">

            <TextView
                android:id="@+id/policyTextView"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Policy: #POL-123456"
                android:textSize="14sp"
                android:textColor="#6B7280"
                android:ellipsize="end"
                android:maxLines="1"/>

            <TextView
                android:id="@+id/dueDateTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Due: 31 Dec 2025"
                android:textSize="14sp"
                android:textColor="#6B7280"
                android:layout_marginStart="8dp"/>
        </LinearLayout>

        <!-- Warning (optional) -->
        <ImageView
            android:id="@+id/warningIcon"
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:src="@android:drawable/ic_dialog_alert"
            app:tint="#DC2626"
            android:visibility="gone"
            android:layout_marginTop="4dp"/>
    </LinearLayout>

    <!-- Status + Arrow container (right side) -->
    <LinearLayout
        android:id="@+id/statusContainer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <!-- Status Badge -->
        <TextView
            android:id="@+id/statusTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Active"
            android:textSize="13sp"
            android:textStyle="bold"
            android:textColor="#FFFFFF"
            android:paddingHorizontal="12dp"
            android:paddingVertical="6dp"
            android:background="@drawable/bg_status_active"
            android:layout_marginEnd="8dp"/>

        <!-- Arrow -->
        <ImageView
            android:id="@+id/arrowIcon"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@android:drawable/ic_menu_more"
            app:tint="#9CA3AF"/>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>