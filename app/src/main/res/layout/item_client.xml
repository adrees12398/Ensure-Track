<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="16dp"
    android:layout_marginEnd="16dp"
    android:layout_marginTop="8dp"
    android:layout_marginBottom="8dp"
    android:background="@drawable/bg_client_item"
    android:padding="16dp">

    <!-- Red Bar for Overdue -->
    <View
        android:id="@+id/redBar"
        android:layout_width="4dp"
        android:layout_height="0dp"
        android:background="#DC2626"
        android:visibility="gone"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>

    <!-- Avatar Image -->
    <ImageView
        android:id="@+id/avatarImageView"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:scaleType="centerCrop"
        android:background="@drawable/bg_avatar"
        android:visibility="gone"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toEndOf="@id/redBar"
        android:layout_marginStart="12dp"/>

    <!-- Avatar Text (for initials like AJ) -->
    <TextView
        android:id="@+id/avatarTextView"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:gravity="center"
        android:textSize="20sp"
        android:textStyle="bold"
        android:textColor="#4F46E5"
        android:background="@drawable/bg_avatar"
        android:visibility="visible"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toEndOf="@id/redBar"
        android:layout_marginStart="12dp"/>

    <!-- Client Name -->
    <TextView
        android:id="@+id/nameTextView"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Client Name"
        android:textSize="18sp"
        android:textStyle="bold"
        android:textColor="#000000"
        android:layout_marginStart="12dp"
        android:layout_marginEnd="8dp"
        app:layout_constraintTop_toTopOf="@id/avatarTextView"
        app:layout_constraintStart_toEndOf="@id/avatarTextView"
        app:layout_constraintEnd_toStartOf="@id/statusTextView"/>

    <!-- Policy Number -->
    <TextView
        android:id="@+id/policyTextView"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Policy: #POL-1234"
        android:textSize="14sp"
        android:textColor="#6B7280"
        android:layout_marginTop="4dp"
        android:layout_marginStart="12dp"
        android:layout_marginEnd="8dp"
        app:layout_constraintTop_toBottomOf="@id/nameTextView"
        app:layout_constraintStart_toEndOf="@id/avatarTextView"
        app:layout_constraintEnd_toStartOf="@id/statusTextView"/>

    <!-- Warning Icon -->
    <ImageView
        android:id="@+id/warningIcon"
        android:layout_width="16dp"
        android:layout_height="16dp"
        android:src="@android:drawable/ic_dialog_alert"
        app:tint="#DC2626"
        android:visibility="gone"
        android:layout_marginTop="4dp"
        android:layout_marginStart="12dp"
        app:layout_constraintTop_toBottomOf="@id/policyTextView"
        app:layout_constraintStart_toEndOf="@id/avatarTextView"/>

    <!-- Due Date -->
    <TextView
        android:id="@+id/dueDateTextView"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Due: Date"
        android:textSize="14sp"
        android:textColor="#6B7280"
        android:layout_marginTop="4dp"
        android:layout_marginStart="4dp"
        android:layout_marginEnd="8dp"
        app:layout_constraintTop_toBottomOf="@id/policyTextView"
        app:layout_constraintStart_toEndOf="@id/warningIcon"
        app:layout_constraintEnd_toStartOf="@id/statusTextView"/>

    <!-- Status Badge -->
    <TextView
        android:id="@+id/statusTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Active"
        android:paddingStart="12dp"
        android:paddingEnd="12dp"
        android:paddingTop="6dp"
        android:paddingBottom="6dp"
        android:textSize="14sp"
        android:textStyle="bold"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toStartOf="@id/arrowIcon"
        android:layout_marginEnd="8dp"/>

    <!-- Arrow Icon -->
    <ImageView
        android:id="@+id/arrowIcon"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:src="@android:drawable/ic_media_play"
        android:rotation="0"
        android:alpha="0.3"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>