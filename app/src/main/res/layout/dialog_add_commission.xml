<?xml version="1.0" encoding="utf-8"?>
<!-- File: app/src/main/res/layout/dialog_add_commission.xml -->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="24dp"
    android:background="@android:color/white">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Add Commission Record"
        android:textSize="20sp"
        android:textStyle="bold"
        android:textColor="#4CAF50"
        android:layout_marginBottom="20dp"/>

    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Policy Number"
        android:layout_marginBottom="12dp"
        app:boxStrokeColor="#4CAF50"
        app:hintTextColor="#4CAF50">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/etPolicyNumber"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="text"/>
    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Client Name"
        android:layout_marginBottom="12dp"
        app:boxStrokeColor="#4CAF50"
        app:hintTextColor="#4CAF50">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/etClientName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"/>
    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Premium Amount (Rs.)"
        android:layout_marginBottom="12dp"
        app:boxStrokeColor="#4CAF50"
        app:hintTextColor="#4CAF50">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/etPremiumAmount"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="numberDecimal"/>
    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Commission Rate (%)"
        android:layout_marginBottom="20dp"
        app:boxStrokeColor="#4CAF50"
        app:hintTextColor="#4CAF50">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/etCommissionRate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="numberDecimal"/>
    </com.google.android.material.textfield.TextInputLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="ðŸ’¡ Commission will be calculated automatically"
        android:textSize="12sp"
        android:textColor="#666666"
        android:layout_marginBottom="16dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btnCancelCommission"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Cancel"
            android:backgroundTint="#9E9E9E"
            android:textColor="#FFFFFF"
            android:layout_marginEnd="8dp"/>

        <Button
            android:id="@+id/btnSaveCommission"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Save"
            android:backgroundTint="#4CAF50"
            android:textColor="#FFFFFF"
            android:layout_marginStart="8dp"/>
    </LinearLayout>

</LinearLayout>