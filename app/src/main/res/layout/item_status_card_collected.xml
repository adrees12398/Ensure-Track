<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardCornerRadius="12dp"
    app:cardElevation="2dp"
    app:strokeWidth="0dp"
    app:strokeColor="@color/success">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp"
        android:background="@color/card_bg_light">

        <!-- Border indicator -->
        <View
            android:layout_width="4dp"
            android:layout_height="match_parent"
            android:background="@color/success"
            android:layout_gravity="start"
            android:layout_marginEnd="12dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="12dp">

            <View
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="@drawable/bg_icon_success" />

            <Space
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Paid"
                android:textColor="@color/success"
                android:textSize="11sp"
                android:textStyle="bold"
                android:paddingStart="8dp"
                android:paddingEnd="8dp"
                android:paddingTop="4dp"
                android:paddingBottom="4dp"
                android:background="@drawable/bg_badge_success" />
        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="COLLECTED"
            android:textColor="@color/text_secondary"
            android:textSize="11sp"
            android:letterSpacing="0.1"
            android:layout_marginBottom="4dp" />

        <TextView
            android:id="@+id/tvCollectedAmount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="$8,200"
            android:textColor="@color/text_primary"
            android:textSize="20sp"
            android:textStyle="bold"
            android:layout_marginBottom="4dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="15 policies paid"
            android:textColor="@color/text_secondary"
            android:textSize="11sp" />

    </LinearLayout>
</com.google.android.material.card.MaterialCardView>